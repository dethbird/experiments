{% extends 'layout.html.twig' %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <script type="text/javascript">
        var layout = {{layout|json_encode|raw}};
    </script>
    <div id="container">
    {% for object in layout.objects %}
      <img
        src="{{object.image_url}}"
        id="{{object.id}}"
        class="object{% if object.clickable %} clickable{% endif %}"
        style="top: {{object.end_location.top}}px; left: {{object.end_location.left}}px;"
        {% if object.alt %} title={{object.alt}}{% endif %}
      />
    {% endfor %}
    {% for object in layout.text %}
      <div
        id="{{object.id}}"
        class="text"
        style="top: {{object.end_location.top}}px; left: {{object.end_location.left}}px; overflow-y: {{object.overflow.y}}; overflow-x: {{object.overflow.x}}; width: {{object.dimensions.width}}px; height: {{object.dimensions.height}}px; text-align: {{object.text_align}};"
      >{{object.copy|raw|markdown}}</div>
    {% endfor %}
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/index.js"></script>
{% endblock %}
